@model TouristAgency.Models.ClientVoucher

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClientVoucher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ReservationMark" /> @Html.DisplayNameFor(model => model.ReservationMark)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentMark" /> @Html.DisplayNameFor(model => model.PaymentMark)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Voucher" class="control-label"></label>
                <select asp-for="Voucher.Name" class ="form-control" asp-items="ViewBag.VoucherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <select asp-for="Client.LastName" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
